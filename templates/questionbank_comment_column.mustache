{{!
    @template mod_studentquiz/questionbank_comment_column

    Template for rendering comment column in question bank.

    Example context (json):
    {
        "publiccomment": 5,
        "unreadpubliccomment": false,
        "privatecomment": 4,
        "unreadprivatecomment": false,
        "publiccommenttitle": "Public comment title",
        "privatecommenttitle": "private comment title",
        "columncontentdelimiter": "|",
        "exclamationmark": "!"
    }
}}

<span title="{{#privatecomment}}{{privatecommenttitle}}{{/privatecomment}}{{^privatecomment}}{{publiccommenttitle}}{{/privatecomment}}">
    <span class="number-public-comments">{{publiccomment}}</span>
    {{#unreadpubliccomment}}
        <span class="exclamation-mark public-comment font-weight-bold text-primary">{{exclamationmark}}</span>
    {{/unreadpubliccomment}}
    {{#privatecomment}}
        {{columncontentdelimiter}}
        <span class="number-private-comments">{{privatecomment}}</span>
        {{#unreadprivatecomment}}
            <span class="exclamation-mark private-comment font-weight-bold text-primary">{{exclamationmark}}</span>
        {{/unreadprivatecomment}}
    {{/privatecomment}}
</span>
